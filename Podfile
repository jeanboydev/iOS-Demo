# Uncomment the next line to define a global platform for your project

platform :ios, '9.0'

source 'https://github.com/CocoaPods/Specs.git'

target 'iOS-Demo' do
  
  use_frameworks!

  # Pods for iOS-Demo
  # 自动布局
  pod 'SnapKit'
  # UserDefaults 封装库
  pod 'SwiftyUserDefaults'
  # 内购 封装库
  pod 'SwiftyStoreKit'
  # 网络框架
  pod 'Alamofire'
  # 进度提示
  pod 'LCProgressHUD'
  pod 'YYKit'
  pod 'KVOController'
  # json 格式动画
  pod 'lottie-ios'
  # label 扩展库
  pod 'TTTAttributedLabel'
  
  ## 第三方统计
  pod 'Flurry-iOS-SDK'
  pod 'Fabric'
  pod 'Crashlytics'
  pod 'AppsFlyerFramework'
  pod 'FacebookCore'
  pod 'Firebase/Core'
  
  
  
  
  ## 测试需要的库
  target 'iOS-DemoTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'iOS-DemoUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
